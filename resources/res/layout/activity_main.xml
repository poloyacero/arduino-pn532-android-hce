<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/llBody" android:padding="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/rlReadNFCTAG" android:background="@color/colorPrimary" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp">
            <ImageView android:id="@+id/imgRead" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true"/>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginBottom="10dp" android:layout_toRightOf="@+id/imgRead" android:layout_centerInParent="true" android:layout_marginStart="10dp" android:layout_toEndOf="@+id/imgRead">
                <TextView android:textSize="20sp" android:textColor="@android:color/white" android:id="@+id/titleRead" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="@string/str_read_title"/>
                <TextView android:textSize="16sp" android:textColor="@android:color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="@string/str_read_description" android:layout_below="@+id/titleRead" android:layout_marginStart="10dp"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rlWriteNFCTAG" android:background="@color/colorPrimary" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp">
            <ImageView android:id="@+id/imgWrite" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true"/>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginBottom="10dp" android:layout_toRightOf="@+id/imgWrite" android:layout_centerInParent="true" android:layout_marginStart="10dp" android:layout_toEndOf="@+id/imgWrite">
                <TextView android:textSize="20sp" android:textColor="@android:color/white" android:id="@+id/titleWrite" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="@string/str_write_title"/>
                <TextView android:textSize="16sp" android:textColor="@android:color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="@string/str_write_description" android:layout_below="@+id/titleWrite" android:layout_marginStart="10dp"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rlTapNFCTAG" android:background="@color/colorPrimary" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp">
            <ImageView android:id="@+id/imgTap" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true"/>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginBottom="10dp" android:layout_toRightOf="@+id/imgTap" android:layout_centerInParent="true" android:layout_marginStart="10dp" android:layout_toEndOf="@+id/imgTap">
                <TextView android:textSize="20sp" android:textColor="@android:color/white" android:id="@+id/titleTap" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="@string/str_tap_title"/>
                <TextView android:textSize="16sp" android:textColor="@android:color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="@string/str_tap_description" android:layout_below="@+id/titleTap" android:layout_marginStart="10dp"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
